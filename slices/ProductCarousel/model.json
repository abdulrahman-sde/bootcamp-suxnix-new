              "name": {
                "type": "Text",
                "config": {
                  "label": "Product Name"
                }
              },
              "rating_value": {
                "type": "Number",
                "config": {
                  "label": "Rating Value"
                }
              },
              "rating_count": {
                "type": "Number",
                "config": {
                  "label": "Rating Count"
                }
              },
              "price": {
                "type": "Number",
                "config": {
                  "label": "Product Price",
                  "placeholder": ""
                }
              },
              "bg_color": {
                "type": "Text",
                "config": {
